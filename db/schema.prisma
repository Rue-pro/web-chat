// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int    @id @default(autoincrement())
  name String
  email String @unique
  phone String @unique @db.VarChar(11)
  password String
  avatar String?
  avatarId String?
  role Role @default(DEVELOPER)
}

enum Role {
  USER
  ADMIN
  DEVELOPER
}