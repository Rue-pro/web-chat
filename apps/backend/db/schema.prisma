// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String    @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  email String @unique
  phone String @unique
  password String

  avatar String?
  role Role @default(DEVELOPER)

  message Message[] @relation("author")

  @@map("users")
}

enum Role {
  USER
  ADMIN
  DEVELOPER
}

model Message {
  id String    @id @default(cuid())
  content String

  author User @relation("author", fields: [authorId], references: [id])
  authorId String

  receiverId String
  receiver_type Receiver @default(PERSON)

  sentTime DateTime

  @@map("messages")
}

enum Receiver {
  GROUP
  PERSON
}